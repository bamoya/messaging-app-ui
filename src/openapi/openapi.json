        "type": "oauth2",
        "in": "header",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "flows": {
          "password": {
            "authorizationUrl": "http://localhost:9090/realms/messaging-app/protocol/openid-connect/auth",
            "tokenUrl": "http://localhost:9090/realms/messaging-app/protocol/openid-connect/token",
            "scopes": {}
          }
        }
      }
    }
  }
